<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.ArticleLabelDao">

    <resultMap id="BaseResultMap" type="com.tyzz.blog.entity.ArticleLabel">
        <!--@Table article_label-->
        <result property="articleLabelId" column="article_label_id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="labelId" column="label_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="BOOLEAN"/>
    </resultMap>

    <select id="listHotIds" resultMap="BaseResultMap">
        SELECT al.label_id FROM article_label al
            LEFT JOIN label l ON al.`label_id` = l.`label_id`
        WHERE l.`state` = 1
        GROUP BY al.label_id
        ORDER BY COUNT(al.label_id) DESC
        limit 10
    </select>
</mapper>