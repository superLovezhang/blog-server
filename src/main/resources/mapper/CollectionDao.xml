<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tyzz.blog.dao.CollectionDao">

    <resultMap id="BaseResultMap" type="com.tyzz.blog.entity.Collection">
        <!--@Table collection-->
        <result property="collectionId" column="collection_id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="BOOLEAN"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          collection_id, article_id, user_id, state
        from blog.collection
        where collection_id = #{collectionId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          collection_id, article_id, user_id, state
        from blog.collection
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          collection_id, article_id, user_id, state
        from blog.collection
        <where>
            <if test="collectionId != null">
                and collection_id = #{collectionId}
            </if>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="collectionId" useGeneratedKeys="true">
        insert into blog.collection(article_id, user_id, state)
        values (#{articleId}, #{userId}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.collection
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where collection_id = #{collectionId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.collection where collection_id = #{collectionId}
    </delete>

</mapper>